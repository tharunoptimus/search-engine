<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="author", content="tharunoptimus")
        meta(name="keywords", content="crawler")
        meta(name="description", content="crawler using expressjs")
        script(src="/js/pace.js")
        link(rel="stylesheet" href="/css/pace.css")
        link(rel="stylesheet", href="/css/search.css")

        title !{title}
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
    body
        script.
            var resultObject = !{results};
        
        .searchPageBody
            .searchPageHeader
                .logoAndSearchBox
                    a(href="/")
                        .headerLogoContainer
                            img(src="/images/logo.png", alt="Logo")
                    .searchBoxContainer
                        .inputFieldHolder
                            input#subSearchTermInput(aria-label="Search Box", type="url", name="subUrlInput", value=q)
                            span.marginleft
                            span.searchLogoContainer#searchPageSearchButton(style="padding-left:0.5rem;")
                                svg(focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24")
                                    path(d="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z")
                .tabsContainer
                    .zyx
                        .tabsHolder
                            span#sitesSpanTab Sites
                            span#imagesSpanTab Images
            .wrapper
                .resultsDiv

                .imagesDiv
                    
                        
                .paginationHolder
                    button#previousButton.paginationButtonsDiv
                        .paginationButtons
                            svg(aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left" class="svg-inline--fa fa-chevron-left fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512")
                                path(fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z")
                        span Previous
                    button#nextButton.paginationButtonsDiv
                        .paginationButtons
                            svg(aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-right" class="svg-inline--fa fa-chevron-right fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512")
                                path(fill="currentColor" d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z")
                        span Next

            #showImagePreview.modal.fade(tabindex='-1' role='dialog' aria-labelledby='showImagePreviewTitle' aria-hidden='true')
                .modal-dialog.modal-dialog-centered(role='document')
                    .modal-content
                        .modal-body
                            .previewImageHolder
                                img#previewImage
                            .previewImageCaptionsContainer
                                span#previewImageCaption
                                a#previewImageLink(href='/')
                        .modal-footer
                            button.btn.btn-secondary(type='button' data-dismiss='modal') Close



        script(src='https://code.jquery.com/jquery-3.6.0.min.js' integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=' crossorigin='anonymous')
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
        script(src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js")
        
        script(src='/js/search.js')